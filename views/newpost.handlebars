<div class="container mt-5 text-white">
  <h2 class="mb-4">Create New Blog Post</h2>
  <form class="new-post-form bg-dark p-4 rounded">
    <div class="mb-3">
      <label for="title-new-post" class="form-label text-white">Title:</label>
      <input
        type="text"
        class="form-control bg-secondary text-white"
        id="title-new-post"
        placeholder="Enter a title here"
      />
    </div>
    <div class="mb-3">
      <label for="content-new-post" class="form-label text-white">Content:</label>
      <textarea
        class="form-control bg-secondary text-white"
        id="content-new-post"
        rows="5"
        placeholder="Enter post content here"
      ></textarea>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-outline-light">Create Post</button>
    </div>
  </form>
</div>
