<main class="container mt-5 text-white">
  <h1 class="mb-4">Sign Up</h1>
  <form id="signup-form" class="signup-form bg-dark p-4 rounded">
    <div class="mb-3">
      <label for="username" class="form-label text-white">Username:</label>
      <input
        type="text"
        class="form-control bg-secondary text-white"
        id="username"
        placeholder="Username"
      />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label text-white">Email:</label>
      <input 
        type="email" 
        class="form-control bg-secondary text-white" 
        id="email" 
        placeholder="Email" 
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label text-white">Password:</label>
      <input
        type="password"
        class="form-control bg-secondary text-white"
        id="password"
        placeholder="Password must be over 8 characters long"
      />
    </div>
    <button type="submit" class="btn btn-outline-light">Sign Up</button>
  </form>
</main>
